<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>Kom och Hämta</title>
	@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"> *@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		nav {
			background-color: #ffffff;
			height: 50px;
			padding: 10px;
			box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2);
		}
			nav ul {
				list-style: none;
				display: flex;
				justify-content: center;
				align-items: center;
			}
				nav ul li {
					margin: 0 10px;
				}
					nav ul li a {
						text-decoration: none;
						color: #333333;
						font-size: 16px;
					}
						nav ul li a:hover {
							color: #000000;
						}
	</style>
</head>
<body>
	<nav>
		@if (User.Identity.IsAuthenticated)
		{
			<a asp-controller="Products" asp-action="Members">Hem</a>
			<a asp-controller="Account" asp-action="LogOut">Logga ut</a>
		}
		else
		{
			<a asp-controller="Products" asp-action="Index">Hem</a>
			<a asp-controller="Account" asp-action="Register">Register</a>
			<a asp-controller="Account" asp-action="LogIn">Logga in</a>
		}
	</nav>

	<br />
	<div>
		@RenderBody()
	</div>
</body>
</html>
