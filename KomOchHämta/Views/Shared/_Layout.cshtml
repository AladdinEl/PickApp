<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>Kom och Hämta</title>
	@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"> *@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		nav {
			background-color: white;
			height: 50px;
			/* padding: 10px; */
			box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2);
			list-style: none;
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

			nav a {
				text-decoration: none;
				color: #333333;
				font-size: 16px;
			}

				nav a:hover {
					color: #000000;
				}

		/* .content {
			display: flex;
			flex-direction: column;
			align-items: center;
		} */

		.center {
			text-align: center;
		}

		.products {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
		}

		.product {
			display: flex;
			flex-wrap: wrap;
			text-align: center;
			padding: 10px;
			margin-top: 50px;
		}

		/* ----------------------------------------------------------------------------------- */

		.container {
			display: flex;
			align-items: center;
			justify-content: center;
			height: 90vh;
		}

		.left-column {
			flex: 2;
			/* padding: 1rem; */
		
		}

		.right-column {
			flex: 3; 
			background-color: #fffaf0;
			/* padding: 1rem; */
		
		
		}

		.image-column {
			flex: 1;
			background-image: url("/Images/PICKAPP.png");
			background-size: cover;
			background-position: center;
		}

		.form-column {
			flex: 1;
			background-color: #fffaf0;
		}

		.login-form {
			max-width: 300px;
			margin: 0 auto;
			text-align : center;
		}

			.login-form label,
			.login-form input,
			.login-form span {
				display: block;
				margin-bottom: 10px;
			}

				.login-form input[type="submit"] {
					background-color: #007bff;
					color: #fff;
					border: none;
					padding: 10px 20px;
					cursor: pointer;
					text-align: center;
				}

		.login-button {
			display: block;
			background-color: #007bff;
			color: #fff;
			border: none;
			border-radius: 0.3rem;
			padding: 0.5rem 3rem;
			cursor: pointer;
			transition: background-color 0.3s;
			font-family: 'Lucida Handwriting': center;
			margin: 10px auto;
		}

			.login-button:hover {
				background-color: #0056b3;
				color: red;
				box-shadow: 0 0 10px red;
				font-size: 15px;
			}
	</style>
</head>
<body>
	<nav class="nav">
		@if (User.Identity.IsAuthenticated)
		{
			<a asp-controller="Products" asp-action="Members">Hem</a>
			<div>Välkommen @User.Identity.Name!</div>
			<a asp-controller="Account" asp-action="LogOut">Logga ut</a>
		}
		else
		{
			<a asp-controller="Products" asp-action="Index">Hem</a>
			<a asp-controller="Account" asp-action="Register">Register</a>
			<a asp-controller="Account" asp-action="LogIn">Logga in</a>
		}
	</nav>

	@* <br /> *@
		@RenderBody()
</body>
</html>
